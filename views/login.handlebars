{{!--

login form handlebar template

--}}
<h1>{{title}}</h1>
<div class="form-group hidden" id="error-container">
        <div class="text-goes-here">
        </div>
</div>
{{#if error}} 
<div class="error">{{msg}}</div> 
{{/if}} 
<form id="login-form" method="POST" action="/user/login"> 
    <label for="emailAddressInput">Email Address:</label> 
    <input type="email" id="emailAddressInput" name="emailAddressInput"> 
    
    <label for="passwordInput">Password:</label> 
    <input type="password" id="passwordInput" name="passwordInput"> 
    <button type="submit">Login</button> 
</form> 
<a href="/user/register">Click here to register!</a>
<script src='../public/js/client_side_validation.js'></script>
